{
  "include": ["index.ts", "components/link/*.ts", "common", "components/link/*.vue", "components/avatar/*.vue"],
  "exclude": ["**/*.story.*", "**/*.stories.*", "**/*.test.js", "**/*.mdx", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "preserveValueImports": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "mocha"
    ]
  }
}
